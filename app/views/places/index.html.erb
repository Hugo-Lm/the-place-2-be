<div class="container">
  <%= link_to "Ajouter un nouveau spot", new_place_path %>
  <div class="places-block">
    <% @places.each do |place| %>
      <%= link_to place_path(place) do %>
        <div class="place-card">
          <%= place.name %>
          <%= place.address %>
          <%= place.price_level %>
          <%= place.district.name %>
          <%= place.category.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
